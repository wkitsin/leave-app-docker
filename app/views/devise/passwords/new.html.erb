<div style="padding-top: 100px; display: flex; justify-content: center;">
  <div>
    <h2>Forgot your password?</h2><br>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <br>

      <div class="field">
        <%= f.label :email %><br/>
        <%=  f.email_field :email, autofocus: true, autocomplete: "email" , :style => 'width:80%' , class: 'reset-ps' %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'reset-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<style>
  .reset-ps {
    outline-width: 1px;
    outline-color: dimgrey;
  }
  .reset-btn {
    color: white;
    background-color: #007bff;
    border-color: #007bff;
    border-radius: 5px;
    cursor: pointer;
  }
</style>